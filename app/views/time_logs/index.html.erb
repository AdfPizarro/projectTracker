<div class="header">
  <div class="title_bar">
    <div class="">
      <%= link_to image_tag( "menu.svg", :class => "menu_icon"), root_path %>
    </div>
    <div class="">
      <h1 class="page_title">My Logs</h1>
    </div>
    <div class="">
      <%= image_tag "exit.svg", :class => "menu_icon" %>
    </div>

  </div>
</div>
<div class="content">



<div class="total_container">
  <div class="total_word">
    <span>Total</span>
  </div>


 <div class=total_number>
   <%= @total %>
 </div>
</div>
<div class="line">

</div>

<div class="create">
  <%= link_to "Add log", new_time_log_path, :class => "create_link" %>
</div>


<div class="logs_container">
  <% @time_logs.each do |time_log| %>
    <div class="log">
     <div class="log_info">
       <div class="img">
         <% if !time_log.groups.first.nil? %>
         <%= image_tag time_log.groups.first.image, :size => "80x80" %>
       <% else %>
         <%= image_tag "no.png", :size => "110x100" %>
       <% end %>
       </div>
       <div class="info">
         <div class="name">
           <%= time_log.name %>
         </div>
         <div class="date">
           <%= time_log.created_at.strftime("%B %d, %Y") %>
         </div>
       </div>
     </div>

     <div class="time">
       <%= time_log.minutes %>
       Minutes
     </div>
    </div>
  <% end %>
</div>

</div>
