<div class="header">
  <div class="title_bar">
    <div class="">
      <%= image_tag "menu.png", :size => "28x28" %>
    </div>
    <div class="">
      <h1 class="page_title">My time Logs</h1>
    </div>
    <div class="">
      <%= image_tag "exit.png", :size => "28x28" %>
    </div>

  </div>
</div>

<div class="total_container">
  <div class="total_word">
    <span>Total</span>
  </div>


 <div class=total_number>
   <%= @total %>
 </div>
</div>

<p id="notice"><%= notice %></p>





<span>Total time spent </span>
<table>
  <thead>
    <tr>
      <th>Group</th>
      <th>Author</th>
      <th>Name</th>
      <th>Minutes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @time_logs.each do |time_log| %>
      <tr>
        <% if !time_log.groups.first.nil? %>
        <td><%= image_tag time_log.groups.first.image, :size => "100x100" %></td>
      <% else %>
        <td><%= image_tag "no.png", :size => "100x100" %></td>
      <% end %>
        <td><%= time_log.user.username %></td>
        <td><%= time_log.name %></td>
        <td><%= time_log.minutes %></td>
        <td><%= link_to 'Show', time_log %></td>
        <td><%= link_to 'Edit', edit_time_log_path(time_log) %></td>
        <td><%= link_to 'Destroy', time_log, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Time Log', new_time_log_path %>
