<p id="notice"><%= notice %></p>

<h1>Profile</h1>
<%= link_to 'Registed some time', new_time_log_path %>
<%= link_to 'New Group', new_group_path %>
<h2>All my saved logs</h2>
<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Name</th>
      <th>Minutes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @time_logs.each do |time_log| %>
      <tr>
        <td><%= time_log.user.username %></td>
        <td><%= time_log.name %></td>
        <td><%= time_log.minutes %></td>
        <td><%= link_to 'Show', time_log %></td>
        <td><%= link_to 'Edit', edit_time_log_path(time_log) %></td>
        <td><%= link_to 'Destroy', time_log, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

